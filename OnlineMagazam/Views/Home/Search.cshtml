@using OnlineMagazam.Entity
@model IEnumerable<Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="mainBody" class="">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            <div id="sidebar" class="span3">
                @Html.Action("Summary", "Cart")


                <ul id="sideManu" class="nav nav-tabs nav-stacked">

                    @Html.Action("_CategoryList", "Category")
                </ul>
                <br>
                <div class="thumbnail">
                    <img src="/OnlineMagaza/themes//images/products/panasonic.jpg" alt="Bootshop panasonoc New camera">
                    <div class="caption">
                        <h5>Panasonic</h5>
                        <h4 style="text-align:center"><a class="btn" href="product_details.html"> <i class="icon-zoom-in"></i></a> <a class="btn" href="#">Add to <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary" href="#">$222.00</a></h4>
                    </div>
                </div><br>
                <div class="thumbnail">
                    <img src="/OnlineMagaza/themes//images/products/kindle.png" title="Bootshop New Kindel" alt="Bootshop Kindel">
                    <div class="caption">
                        <h5>Kindle</h5>
                        <h4 style="text-align:center"><a class="btn" href="product_details.html"> <i class="icon-zoom-in"></i></a> <a class="btn" href="#">Add to <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary" href="#">$222.00</a></h4>
                    </div>
                </div><br>
                <div class="thumbnail">
                    <img src="/OnlineMagaza/themes//images/payment_methods.png" title="Bootshop Payment Methods" alt="Payments Methods">
                    <div class="caption">
                        <h5>Payment Methods</h5>
                    </div>
                </div>
            </div>
            <!-- Sidebar end=============================================== -->
            <div class="span9">
                <ul class="breadcrumb">
                    <li><a href="index.html">Home</a> <span class="divider">/</span></li>
                    <li class="active">Products Name</li>
                </ul>
                <h3> Ürün İsimleri </h3>

                <br class="clr">
                <div class="tab-content">

                    <div class="tab-pane  active" id="blockView">
                        <ul class="thumbnails">
                            @foreach (var item in Model)
                            {
                                <li class="span3">
                                    <div class="thumbnail" style="width:270px;height:310px">
                                        <a href="/Home/ProductDetails/@item.Id"><img style="width:160px; height:120px;max-width:160px;max-height:160px;" img src="~/Content/Images/@item.Image" alt="" /></a>
                                        <div class="caption" style="width:260px; height:140px;">
                                            <h5><a href="/Home/ProductDetails/@item.Id">@item.Name</a></h5>
                                            <p>
                                                @item.Description
                                            </p>

                                            <h4 style="text-align:center"> <a class="btn" href="/Home/ProductDetails/@item.Id">Görüntüle...<i class="icon-shopping-cart"></i></a> <a class="btn btn-primary">@item.Price (₺)</a></h4>
                                        </div>
                                    </div>
                                </li>
                            }

                        </ul>
                        <hr class="soft">
                    </div>
                </div>

                <br class="clr">
            </div>
        </div>
    </div>
</div>

